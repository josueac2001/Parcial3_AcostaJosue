@model WashingCarDBJosue.DAL.Entities.Vehicle

@{
    ViewData["Title"] = "Create";
}

<h1>Servicios para su vehículo</h1>

<h4>Vehículo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Service.Name" class="control-label"></label>
                <select name="ServiceId" id="ServiceId" class="form-control">
                    <option value="">Seleccione un servicio</option>
                    @foreach (var service in ViewBag.ServiceId as SelectList)
                    {
                        <option value="@service.Value">@service.Text</option>
                    }
                </select>
                @*<select asp-for="Service.Name" class="form-control" asp-items="@(ViewBag.ServiceId as SelectList)"></select>*@
            </div>
            <div class="form-group">
                <label asp-for="Owner" class="control-label"></label>
                <input asp-for="Owner" class="form-control" />
                <span asp-validation-for="Owner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberPlate" class="control-label"></label>
                <input asp-for="NumberPlate" class="form-control" />
                <span asp-validation-for="NumberPlate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
